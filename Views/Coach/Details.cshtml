@model v2.Models.Coach

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Coach</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CoachName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CoachName)
        </dd>
        
        <dt class="col-sm-2">
            Total wins of each team
        </dt>
        <dd>
            @{
                var totalWins = Model.Teams?.Sum(t => t.Wins) ?? 0;
            }
            @totalWins
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teams)
        </dt>
        <dd class="col-sm-10">
            @{
                var teamNames = string.Join(", ", Model.Teams.Select(t => t.TeamName));
                @teamNames
            }
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CoachId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
