@model v2.Models.Match

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MatchDate" class="control-label"></label>
                <input asp-for="MatchDate" class="form-control" />
                <span asp-validation-for="MatchDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResultHomeTeam" class="control-label"></label>
                <input asp-for="ResultHomeTeam" class="form-control" />
                <span asp-validation-for="ResultHomeTeam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResultAwayTeam" class="control-label"></label>
                <input asp-for="ResultAwayTeam" class="form-control" />
                <span asp-validation-for="ResultAwayTeam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeTeam" class="control-label"></label>
                <select asp-for="HomeTeam" class="form-control" asp-items="ViewBag.HomeTeamID">
                    <option value="-1">-- Wybierz Home Team --</option>
                </select>
                <span asp-validation-for="HomeTeam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeam" class="control-label"></label>
                <select asp-for="AwayTeam" class="form-control" asp-items="ViewBag.AwayTeamID">
                    <option value="-1">-- Wybierz Away Team --</option>
                </select>
                <span asp-validation-for="AwayTeam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
